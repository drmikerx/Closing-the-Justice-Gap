<div id="bodyDiv">
  <div id="mainCenter">
    <div id="rightColumn">
      <div id="questionMark">
        <p>
          <a href="">
            <img src="question-mark.jpg" alt="Question Mark" style="width:50px;height:50px;border:0;">
          </a>
        </p>
      </div>
    </div>
  </div>
  <div id="title">
    <br>
    <h2 id="mainTitle">Closing the Justice Gap</h2>
    <br>
    <h3 id="">Ask a Question</h3>

    <br><br><br>
  </div>
    <form id="questionCategory" action="/questionMain" method="post">
        Category:
        <select name="categoryId">
          {{#each category}}
            <option value="{{c_id}}">{{cname}}</option>

          {{/each}}
        </select>
      <br><br>
      <textarea placeholder="Type your question here..." name="userQuestion" cols="75" rows="4"></textarea>
      <br/><br/>
      <input type="submit" value="Submit">
    </form>
</div>
